{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sportsday</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sportsDay.id }}</td>
            </tr>
            <tr>
                <th>Sportid</th>
                <td>{{ sportsDay.sportId }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ sportsDay.day }}</td>
            </tr>
            <tr>
                <th>Opentime</th>
                <td>{{ sportsDay.openTime }}</td>
            </tr>
            <tr>
                <th>Closetime</th>
                <td>{{ sportsDay.closeTime }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sportsdays_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sportsdays_edit', { 'id': sportsDay.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
